{
  "name": "@bun-ui/react",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "version": "0.2.47",
  "homepage": "https://bun-ui.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bunui-kit/bun-ui",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "style": "./dist/index.css",
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./index.css": "./dist/index.css",
    "./index": "./dist/index.css",
    "./themes/default.css": "./dist/themes/default.css",
    "./themes/default": "./dist/themes/default.css",
    "./*": {
      "source": "./src/components/*/index.ts",
      "import": {
        "types": "./dist/types/components/*/index.d.ts",
        "default": "./dist/esm/components/*/index.js"
      },
      "require": {
        "types": "./dist/types/components/*/index.d.ts",
        "default": "./dist/cjs/components/*/index.cjs"
      }
    }
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "scripts": {
    "build": "tsx ../../scripts/main.ts --dts",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "pub:release": "pnpm build && pnpm publish --access public",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.3",
    "postcss": "^8.5.3",
    "postcss-load-config": "^6.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.8",
    "@radix-ui/react-accordion": "1.2.4",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.7",
    "@radix-ui/react-checkbox": "1.2.3",
    "@radix-ui/react-dialog": "1.1.14",
    "@radix-ui/react-dismissable-layer": "1.1.10",
    "@radix-ui/react-dropdown-menu": "2.1.15",
    "@radix-ui/react-label": "2.1.3",
    "@radix-ui/react-popover": "1.1.14",
    "@radix-ui/react-progress": "1.1.0",
    "@radix-ui/react-radio-group": "1.3.3",
    "@radix-ui/react-select": "2.2.5",
    "@radix-ui/react-slider": "1.3.4",
    "@radix-ui/react-slot": "1.2.0",
    "@radix-ui/react-switch": "1.2.2",
    "@radix-ui/react-tabs": "1.1.7",
    "@radix-ui/react-toast": "1.2.7",
    "@radix-ui/react-toggle": "1.1.6",
    "@radix-ui/react-toggle-group": "1.1.7",
    "@tailwindcss/postcss": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.6.7",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "vaul": "^1.1.2"
  }
}
